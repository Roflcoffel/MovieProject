@model PagedList<MovieProject.Models.Movie>

@using PagedList.Mvc
@using PagedList

@{
    ViewBag.Title = "Browse";
}

 @using (Html.BeginForm("Browse", "Home"))
 {
    <p>
        Search: @Html.TextBox("searchMovie")
        <input type="submit" value="Find">

    </p>
    <p class="text-danger">@ViewBag.ErrorMessage</p>
 }

<div class="row">
    @foreach (var movie in Model)
    {
        Html.RenderPartial("_MoviePartial", movie);
    }
</div>

@Html.PagedListPager(Model, page => Url.Action("Browse", new {
    page,
    searchMovie = Request.QueryString["searchMovie"]
}),
    new PagedListRenderOptions() {
        Display = PagedListDisplayMode.IfNeeded,
        DisplayPageCountAndCurrentLocation = true,
        DisplayItemSliceAndTotal = true
    }
)