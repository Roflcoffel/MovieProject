@model MovieProject.Models.FrontPageView

@{
    ViewBag.Title = "Home";
}
<h3>Most Popular Movies</h3>
<div class="row">
    @foreach (var item in Model.MostPopular)
    {
        <div class="CardBorder text-center" style="width: 10rem;">
            <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Url)" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
            </div>
        </div>
    }
</div>
<br />
