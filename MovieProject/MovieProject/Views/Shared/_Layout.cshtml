<!DOCTYPE html>

@using System.Web.Optimization
@using System

@{
    DateTime today = DateTime.Today;
}

<html style="min-height: 100%; position: relative">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="row">
        
        <div class="col">
            <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-primary">
                <div class="container">
                    
                    
                    
                    <ul class="navbar-nav">

                        <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                            <a href="@Url.Action("Index", "Home")" class="nav-link">
                                Home
                            </a>
                        </li>

                        <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Browse" ? "active" : "")">
                            <a href="@Url.Action("Browse", "Home")" class="nav-link">
                                Browse
                            </a>
                        </li>
 
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                Test 1
                            </a>
                            <div class="dropdown-menu">
                                <a href="#" class="dropdown-item">Test</a>
                            </div>
                        </li>
                        
                        
                    </ul>
                    <div class="container" style= "float: right" >
                        <i class="fa fa-shopping-cart" aria-hidden="true">
                            <a href="#">Shopping Cart</a>
                        </i>
                    </div>
                    
                    

                </div>
            </nav>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <h3>@ViewBag.Title</h3>
                <p>@ViewBag.Message</p>
                
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <footer style="position: absolute; bottom: 0; width: 100%; text-align: center">

                    <span class="text-muted">@today.ToString("yyyy-MM-dd") - Andreas Johansson</span>

    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    
    
</body>
</html>